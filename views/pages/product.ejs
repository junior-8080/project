<!DOCTYPE html>
<html>

<head>
    <title>admin</title>
    <%- include('../partials/head'); %>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Quicksand">
    <link href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/admin.css">
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@500&display=swap" rel="stylesheet">
</head>

<body>
    <div class="container-fluid">
        <nav class="navbar navbar-expand-lg navbar-light bg-light" id="nav">
            <a class="navbar-brand" href="http://localhost:3001/"><img src="/images/logo1.jpg" width="50px"
                    height="50px"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarContent"
                aria-controls="navbarContent" aria-expanded="true" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="http://localhost:3001/admin">Home</a>
                    </li>
                </ul>
                <span class="nav-item">
                    <a class="nav-link" href="http://localhost:3001/admin/profile"><i
                            class="fas fa-user">&nbsp;</i><%=email%></a>
                </span>
            </div>
        </nav>
        <div class="row row-container">
            <div class="col-md-2">
                <%- include('../partials/sidenav'); %>
            </div>
            <div class="col-md-5" id="slider-image">
                <p class="heading">Image</p>
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="<%=product.images[0]%>" class="d-block w-100" alt="pro-image" width="400px"
                                height="400px">
                        </div>
                        <div class="carousel-item">
                            <img src="<%=product.images[1]%>" class="d-block w-100" alt="pro-image" width="400px"
                                height="400px">
                        </div>
                        <div class="carousel-item">
                            <img src="<%=product.images[2]%>" class="d-block w-100" alt="pro-image" width="400px"
                                height="400px">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="col-md-4">
                <p class="heading">Details</p>
                <div class="details-container">
                    <div class="details-item">
                        <span id="product-id"><strong>Id:</strong>&nbsp;&nbsp;<%=product.product_id%></span>
                    </div>
                    <div class="details-item">
                        <span><strong>Name:</strong>&nbsp;&nbsp;<%=product.product_name%></span>
                    </div>
                    <div class="details-item">
                        <span><strong>Price:</strong>&nbsp;&nbsp;&#8373;&nbsp;<%=product.product_price%></span>
                    </div>
                    <div class="details-item">
                        <span><strong>Category:</strong>&nbsp;&nbsp;<%=product.category_name%></span>
                    </div>
                    <div class="details-item">
                        <span><strong>Description:</strong>&nbsp;&nbsp;<%=product.category_description%></span>
                    </div>
                    <div class="details-item">
                        <span><strong>Date:</strong>&nbsp;&nbsp;<%=product.product_date%></span>
                    </div>
                    <div class="details-item" id="delete-btn">
                        <span><i class="fa fa-trash btn btn-primary"></i></span>
                    </div>
                </div>
            </div>
        </div>
        <footer>
            <a href="#" class="nav-link"><i class="fa fa-facebook-official"></i></a>
            <a href="#" class="nav-link"><i class="fa fa-pinerest"></i></a>
            <a href="#" class="nav-link"><i class="fa fa-instagram"></i></a>
            <a href="#" class="nav-link"><i class="fa fa-linkedin"></i></a>
            <a href="#" class="nav-link"><i class="fa fa-twitter"></i></a>
        </footer>
    </div>
    <%- include('../partials/footer'); %>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>
    <script src="/js/admin.js"></script>
</body>

</html>